<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="buttonLogin">
        <item name="android:background">@drawable/stroke_01</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="buttonRed">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="buttonBlue">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="item01">
        <item name="android:background">@drawable/item_01</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="item02">
        <item name="android:background">@drawable/item_01</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="bannerTop">
        <item name="android:background">@drawable/back_02</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="textWhite18">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="textBlack18">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="textBlack12">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="textBlack14">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>